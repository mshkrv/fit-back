{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "strict": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@fit/cache": [
        "libs/cache/src"
      ],
      "@fit/cache/*": [
        "libs/cache/src/*"
      ],
      "@fit/database": [
        "libs/database/src"
      ],
      "@fit/database/*": [
        "libs/database/src/*"
      ],
      "@fit/shared": [
        "libs/shared/src"
      ],
      "@fit/shared/*": [
        "libs/shared/src/*"
      ]
    }
  }
}